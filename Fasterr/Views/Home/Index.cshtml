@{
    ViewData["Title"] = "Home Page";
}

<div class="foil p-3 text-center mt-1">
    <h3 class="textDiscount">СЛЪНЧЕВИ НАМАЛЕНИЯ до -50% | 01.06 - 01.08</h3>
</div>

@* ---------------------------------------- *@

<div class="text-center">
    <div>
        <div id="myCarousel" class="carousel slide mb-6 carouselMy" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner rounded-2">
                <div class="carousel-item active">
                    <img class="bd-placeholder-img coroselImg" width="100%" height="100%" src="/images/emilio-garcia-AWdCgDDedH0-unsplash.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)" /></img>
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1>Еxplore the endless world</h1>
                            <p class="opacity-75">View all posts around you!</p>
                            <p><button class="btn btn-lg colored"><a class="nav-link text-white" asp-action="All" asp-controller="Post">All Posts</a></button></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img coroselImg" width="100%" height="100%" src="/images/lars-bo-nielsen-Wu7hYE7Lzzs-unsplash.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)" /></img>
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Become a premium</h1>
                            <p>When you are premium user, you get more privileges. Create groups! Make interesting profile!</p>
                            <p><button class="btn btn-lg btn-light"><a class="nav-link text-black" asp-action="Become" asp-controller="Premium">Become a premium user</a></button></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img coroselImg" width="100%" height="100%" src="https://images.ctfassets.net/7thvzrs93dvf/1oh4HOUh4r98F9oLuhhwAf/5e9edcf40f428fdd6771f9e9bafc54aa/Smiley_wallpaper.jpg?w=1000&h=667&fl=progressive&q=90&fm=jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)" /></img>
                    <div class="container">
                        <div class="carousel-caption text-end">
                            <h1>Don't have an account? Create one now!</h1>
                            <p><button class="btn btn-lg btn-primary"><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a></button></p>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
