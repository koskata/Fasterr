@{
    ViewData["Title"] = "Home Page";
}

<div class="foil p-3 text-center mt-1">
    <h3 class="textDiscount">СЛЪНЧЕВИ НАМАЛЕНИЯ до -50% | 01.06 - 01.08</h3>
</div>

@* ---------------------------------------- *@

<div class="text-center">
    <div>
        <div id="myCarousel" class="carousel slide mb-6 carouselMy" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner rounded-2">
                <div class="carousel-item active">
                    <img class="bd-placeholder-img coroselImg" width="100%" height="100%" src="/images/emilio-garcia-AWdCgDDedH0-unsplash.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)" /></img>
                    <div class="container">
                        <div class="carousel-caption text-center">
                            <h1>See the latest and coolest clothing and shoes for men</h1>
                            <p><button class="btn btn-lg menBtnCar mt-3"><a class="nav-link text-white" asp-action="AllForMen" asp-controller="Product">Men Products</a></button></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img coroselImg" width="100%" height="100%" src="/images/GettyImages-1410443892.webp"></img>
                    <div class="container">
                        <div class="carousel-caption text-center">
                            <h1>Why not also take a look at the best women's products on the market</h1>
                            <p><button class="btn btn-lg womenBtnCar mt-3"><a class="nav-link text-black" asp-action="AllForWomen" asp-controller="Product">Women Products</a></button></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img coroselImg" width="100%" height="100%" src="/images/pixlr-image-generator-5954faf6-79ba-4aa1-ab00-4670eade91e0.png"></img>
                    <div class="container">
                        <div class="carousel-caption text-center">
                            <h1 style="font-size: 3em;">Check out the hot discounts now</h1>
                            <p><button class="btn btn-lg discountsBtnCar mt-3"><a class="nav-link text-white" asp-controller="Product" asp-action="AllDiscount">Discounts</a></button></p>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
