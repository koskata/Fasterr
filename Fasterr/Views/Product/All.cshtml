@model List<ProductAllViewModel>

@{
    string type = "";

    foreach (var item in Model)
    {
        type = item.Type;
    }
}

@{
    @if (type == "Man")
    {
        ViewData["Title"] = "Man products";
    }
    else
    {
        ViewData["Title"] = "Woman products";
    }
    
}

<div class="mt-3 text-center">
    @if (type == "Man")
    {
        <h1>Man's products</h1>
    }
    else
    {
        <h1>Woman's products</h1>
    }
    <hr></hr>
</div>

<div class="d-flex gap-5 flex-wrap" style="padding-left: 11em;">
    @foreach (var product in Model)
    {
        <partial name="_ProductPartialView" model="@product" />
    }
</div>