@model ProductAllViewModel

@{
    double rating = 0.0;
    if (Model.Rating > 0)
    {
        rating = (double)Model.Rating / (double)Model.RatingCount;
    }
}

<style>

    .cardLink {
        opacity: 1;
        transition: opacity 0.5s;
    }

    .cardLink:hover {
        opacity: 0.65;
    }

    .deleteProductFromCartBtn {
        position: relative;
        width: 50px;
        height: 50px;
        border-radius: 25px;
        border: 2px solid rgb(231, 50, 50);
        background-color: #fff;
        cursor: pointer;
        box-shadow: 0 0 10px #333;
        overflow: hidden;
        transition: .3s;
    }

    .deleteProductFromCartBtn:hover {
        background-color: rgb(245, 207, 207);
        transform: scale(1.2);
        box-shadow: 0 0 4px #111;
        transition: .3s;
    }

    .deleteBtnImage {
        color: rgb(231, 50, 50);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transition: .3s;
    }

    .deleteProductFromCartBtn:focus .deleteBtnImage {
        opacity: 0;
        transition: .3s;
    }

    .deleteProductFromCartBtn:focus {
        width: 150px;
        height: 50px;
        transition: .3s;
    }
</style>

<a asp-area="" asp-controller="Product" asp-action="Info" asp-route-id="@Model.Id" class="cardLink" style="text-decoration: none; color: inherit;">
    <div class="card" style="border: 1px solid black; border-radius: 0.1em; max-height: 10.5em;">
        <div class="d-flex g-0 " style="background-color: #E8E8E8; max-height: 10.3em;">
            <div class="">
                <img src="@Model.ImageURL" class="img-fluid rounded-start" style="max-height: 10.3em;">
            </div>

            <div class="card-body d-flex gap-4 justify-content-between">
                <span>
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><b>@Model.Price лв.</b></p>
                    <hr></hr>
                    <div class="d-flex flex-column align-items-center">
                        @if (rating > 0 && rating < 1.50)
                        {
                            <div class="d-flex p-1 gap-2">
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                            </div>
                        }
                        else if (rating >= 1.50 && rating < 2.50)
                        {
                            <div class="d-flex p-1 gap-2">
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                            </div>
                        }
                        else if (rating >= 2.50 && rating < 3.50)
                        {
                            <div class="d-flex p-1 gap-2">
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                            </div>
                        }
                        else if (rating >= 3.50 && rating < 4.50)
                        {
                            <div class="d-flex p-1 gap-2">
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                            </div>
                        }
                        else if (rating >= 4.50 && rating <= 5)
                        {
                            <div class="d-flex p-1 gap-2">
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                                <img src="/images/star.png" style="width: 2.8rem; height: 2.5rem;"></img>
                            </div>
                        }
                        else
                        {
                            <h6 class="p-1 text-center">Продуктът все още не е оценен!</h6>
                        }
                    </div>
                </span>
                <span class="">
                    <a class="deleteProductFromCartBtn">
                        <svg class="deleteBtnImage" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </a>
                </span>
            </div>

        </div>
    </div>
</a>