@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<style>
    .addToCart {
        opacity: 1;
        transition: opacity 0.5s;
    }

        .addToCart:hover {
            opacity: 0.65;
        }

    .loveBtn:hover {
        background-color: #DDD;
    }
</style>

<div class="ms-5 me-5 mt-5 text-center">
    <div class="row">
        <div class="col-4" style="border: 1px solid black; border-radius: 0.5em;">
            <img class="card-img-top" style="width: 34.9rem;"
                 src="@Model.ImageURL" alt="Product Image">
        </div>
        <div class="card pt-4 col-8 d-flex flex-column gap-3 border-0">
            <p style="font-size:35px;"><u>@Model.Name</u></p>
            <h4>@Model.Price лв.</h4>
            <hr></hr>
            <p style="font-size: 20px;">@Model.Description</p>
            <p><b>@Model.Brand - @Model.Category</b></p>

            @* ----------- *@

            <div class="row ps-4 gap-5">
                <a class="btn text-white col-10 addToCart" style="background-color: #BF0300; font-size: 1.6em;">Добави в количка</a>
                <a class="btn col-1 loveBtn"><img src="~/images/heart.png" class="loveImg" style="width: 1.6em;"></a>
            </div>
        </div>
    </div>
</div>