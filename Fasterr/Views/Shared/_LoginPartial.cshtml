@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-secondary radiusBtns btn-lg p-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item ps-4 pe-4">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark btn btn-secondary text-white radiusBtns btn-lg p-3">Изход</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-secondary radiusBtns btn-lg p-3" asp-area="Identity" asp-page="/Account/Register">Създай акаунт</a>
    </li>
    <li class="nav-item ps-4 pe-4">
            <a class="nav-link text-dark btn btn-secondary text-white radiusBtns btn-lg p-3" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
</ul>
