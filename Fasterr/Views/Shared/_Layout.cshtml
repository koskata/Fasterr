<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fasterr</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fasterr.styles.css" asp-append-version="true" />
</head>

<style>
    .navigaciq {
        min-height: 10vh;
        background-color: #E0E0E0;
        box-shadow: 20px;
    }

    header {
        border-bottom: 3px solid black;
    }

    footer {
        background-color: #E0E0E0;
    }

    .title {
        font-size: 2em;
    }

    .namaleniq {
        background-color: #02680D;
    }

    .foil {
        opacity: 2;
        width: 100%;
        height: 100%;
        clip-path: url(#myClip);
        background: linear-gradient( 48deg, #e3c1f4, #d9d7ed, #dff7f1, #acf0ff, #e3c1f4, #d9d7ed, #dff7f1, #acf0ff, #e3c1f4 );
        animation: foil 8s ease infinite;
        background-size: 200% 200%;
    }

    keyframes foil {
    0%
    {
        background-position: 84% 0;
    }

    50% {
        background-position: 17% 100%;
    }

    100% {
        background-position: 84% 0;
    }

    }

    .textDiscount {
        background: linear-gradient(to right, #ef5350, #f48fb1, #7e57c2, #2196f3, #26c6da, #43a047, #eeff41, #f9a825, #ff5722);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow navigaciq">
            <div class="container-fluid navigaciq2">
                <a class="navbar-brand ps-3 title" asp-area="" asp-controller="Home" asp-action="Index">Fasterr</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-4 ps-5">
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-success btn-lg">Мъже</button>
                            <button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split btn-lg" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-black" href="#">Shoes</a></li>
                                <li><a class="dropdown-item text-black" href="#">Kits</a></li>
                                <li><a class="dropdown-item text-black" href="#">Tracksuits</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-black" href="#">Thermal underwear</a></li>
                            </ul>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-success btn-lg">Жени</button>
                            <button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split btn-lg" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-black" href="#">Shoes</a></li>
                                <li><a class="dropdown-item text-black" href="#">Kits</a></li>
                                <li><a class="dropdown-item text-black" href="#">Tracksuits</a></li>
                                <li><hr class="dropdown-divider text-black"></li>
                                <li><a class="dropdown-item text-black" href="#">Thermal underwear</a></li>
                            </ul>
                        </div>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Fasterr
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
