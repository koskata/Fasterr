<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fasterr</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fasterr.styles.css" asp-append-version="true" />


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow navigaciq">
            <div class="container-fluid navigaciq2">
                <a class="navbar-brand ps-3 title" asp-area="" asp-controller="Home" asp-action="Index">Fasterr</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-4 ps-5">
                        <div class="btn-group">
                            <a style="--clr:#39FF14" type="button" class="btn btn-lg btnForProducts" asp-area="" asp-controller="Product" asp-action="AllForMen"><span>Мъже</span><i></i></a>
                        </div>
                        <div class="btn-group">
                            <a style="--clr:#FF44CC" type="button" class="btn btn-lg btnForProducts" asp-area="" asp-controller="Product" asp-action="AllForWomen"><span>Жени</span><i></i></a>
                        </div>
                    </ul>
                    <div class="navbar-nav gap-5">
                        <a asp-area="" asp-controller="Cart" asp-action="Cart" style="--color:#96f8ff; --slant:20px; --border:3px" class="text-dark btn btn-lg ps-3 pe-3 profileBtn">Количка</a>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="border-top: 1px dotted black;">
        <div class="container">
            &copy; @DateTime.Now.Year - Fasterr
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
