@model IEnumerable<ProductAllViewModel>

<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-5" id="exampleModalLabel">Liked products</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                @if (@Model.Count() == 0)
                {
                    <h4>No liked products!</h4>
                }
                else
                {
                    <div class="p-2 mb-2 com">
                        <h5>UserFullName</h5>
                        <hr></hr>
                        <p class="descrComment">Description</p>
                    </div>
                    @* @foreach (var product in Model)
                    {
                        <partial name="_ProductInCartPartialView" model="@product" />
                    } *@
                }
            </div>
        </div>
    </div>
</div>